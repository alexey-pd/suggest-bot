{
  "compilerOptions": {
    "target": "ES2021",
    "baseUrl": ".",
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": {
      "~/*": [
        "src/*"
      ]
    },
    "strict": true,
    "noEmit": true,
    "outDir": "build",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "preserveWatchOutput": true
  },
  "include": [
    "api/**/*",
    "src/**/*"
  ]
}
